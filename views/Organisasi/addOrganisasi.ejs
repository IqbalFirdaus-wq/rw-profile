<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
      <h5 class="mb-0">Tambah Organisasi RW </h5>
    </div>
    <div class="card-body">
      <form method="post" action="/organisasi/add">
        <!-- ðŸ”¹ Pilih RW -->
      <div class="mb-3">
        <label class="form-label">RW</label>
        <select name="rw_id" class="form-select" required>
          <option value="">-- Pilih RW --</option>
          <% rwList.forEach(rw => { %>
            <option value="<%= rw.id %>">
              RW <%= rw.kode_rw %> - <%= rw.nama_rw %>
            </option>
          <% }) %>
        </select>        
      </div>
        <div class="mb-3">
          <label class="form-label">Nama Organisasi</label>
          <input name="nama" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Tipe</label>
          <input name="tipe" class="form-control" placeholder="Karang Taruna, PKK, dll">
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Jumlah Unit</label>
            <input name="jumlah_unit" type="number" class="form-control">
          </div>
          <div class="col-md-6">
            <label class="form-label">Jumlah Orang</label>
            <input name="jumlah_orang" type="number" class="form-control">
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label">Lokasi</label>
          <input name="lokasi" class="form-control">
        </div>
        <div class="mb-3">
          <label class="form-label">Keterangan</label>
          <textarea name="keterangan" class="form-control" rows="3"></textarea>
        </div>
        <div class="d-flex justify-content-end">
          <a href="/organisasi/<%= rw_id %>" class="btn btn-secondary me-2">Batal</a>
          <button class="btn btn-success">Simpan</button>
        </div>
      </form>
    </div>
  </div>
  