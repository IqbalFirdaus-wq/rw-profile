<div class="card shadow-sm">
  <div class="card-header bg-success text-white">
    <h5 class="mb-0">Tambah Data Keamanan RW</h5>
  </div>

  <div class="card-body">
    <form method="post" action="/keamanan/add">
      <!-- ðŸ”¹ Dropdown RW -->
      <div class="mb-3">
        <label class="form-label">RW</label>
        <select name="rw_id" class="form-select" required>
          <option value="">-- Pilih RW --</option>
          <% rwList.forEach(rw => { %>
            <option value="<%= rw.id %>" <%= rw_id == rw.id ? 'selected' : '' %>>
              RW <%= rw.kode_rw %> - <%= rw.nama_rw %>
            </option>
          <% }) %>
        </select>        
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label class="form-label">Jumlah Pos Keamanan Unit</label>
          <input type="number" name="pos_keamanan_unit" class="form-control" required>
        </div>
        <div class="col-md-6">
          <label class="form-label">Jumlah Pos Keamanan Baik</label>
          <input type="number" name="pos_keamanan_baik" class="form-control" required>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label class="form-label">Jumlah Pos Keamanan Rusak</label>
          <input type="number" name="pos_keamanan_rusak" class="form-control">
        </div>
        <div class="col-md-6">
          <label class="form-label">Jumlah Linmas</label>
          <input type="number" name="jumlah_linmas" class="form-control">
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label class="form-label">Jumlah Satpam</label>
          <input type="number" name="jumlah_satpam" class="form-control">
        </div>
        <div class="col-md-6">
          <label class="form-label">Jumlah CCTV</label>
          <input type="number" name="jumlah_cctv" class="form-control">
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label class="form-label">CCTV Baik</label>
          <input type="number" name="cctv_baik" class="form-control">
        </div>
        <div class="col-md-6">
          <label class="form-label">CCTV Rusak</label>
          <input type="number" name="cctv_rusak" class="form-control">
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Titik Rawan</label>
        <textarea name="titik_rawan" class="form-control" rows="2"></textarea>
      </div>

      <div class="row mb-3">
        <div class="col-md-4">
          <label class="form-label">Jumlah APAR</label>
          <input type="number" name="jumlah_apar" class="form-control">
        </div>
        <div class="col-md-4">
          <label class="form-label">Jumlah Sprinkle</label>
          <input type="number" name="jumlah_sprinkle" class="form-control">
        </div>
        <div class="col-md-4">
          <label class="form-label">Jumlah Sumber Air</label>
          <input type="number" name="jumlah_sumber_air" class="form-control">
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <a href="/keamanan/<%= rw_id %>" class="btn btn-secondary me-2">Batal</a>
        <button type="submit" class="btn btn-success">Simpan</button>
      </div>
    </form>
  </div>
</div>
